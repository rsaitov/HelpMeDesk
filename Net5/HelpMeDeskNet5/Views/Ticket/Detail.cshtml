@model TicketViewModel

<div class="container">
    <div class="col-md-12 order-md-1">

        <div class="row mt-2">
            <div class="col-md-2">
            </div>
            <div class="col-md-10">
                @*<button class="btn btn-warning" asp-action="Edit" asp-route-id="@Model.Ticket.Id"></button>*@
                @Html.ActionLink("Редактировать", "Edit", "Ticket", new { id = @Model.Id },new { @class = "btn btn-warning btn-xs" })
            </div>
        </div>
        <div class="row mt-2">
            <div class="col-md-2">
            </div>
            <div class="col-md-3">
                <label>Проект: </label>
                <a asp-controller="Project" asp-action="Index" asp-route-id="@Model.Project.Id">@Model.Project.Name</a>
            </div>
            <div class="col-md-3">
                <label>Автор: </label>
                <a asp-controller="User" asp-action="Index" asp-route-id="@Model.Author.Id">@Model.Author.Name</a>
            </div>
            <div class="col-md-4">
                <div class="float-right">
                    <label>Создана: </label> @Model.CreationDate.ToShortDateString() @Model.CreationDate.ToShortTimeString()
                </div>
            </div>
        </div>

        <div class="row mt-2">
            <div class="col-md-2">
                <label class="float-right">Заявка №</label>
            </div>
            <div class="col-md-10">
                <p>@Model.Id</p>
            </div>
        </div>

        <div class="row">
            <div class="col-md-2">
                <label class="float-right">Статус:</label>
            </div>
            <div class="col-md-10">
                <a href="#" class="badge badge-pill @(Model.Status.Name == "New" ? "badge-secondary" :
                    (Model.Status.Name == "In progress" ? "badge-primary" :
                    (Model.Status.Name == "Delayed" ? "badge-warning" :
                    (Model.Status.Name == "Solved" ? "badge-success" : "badge-dark")))
                 )">@Model.Status.Name</a>
            </div>
        </div>

        <div class="row">
            <div class="col-md-2">
                <label class="float-right">Название:</label>
            </div>
            <div class="col-md-10">
                <h5 class="mb-3">@Model.Name</h5>
            </div>
        </div>

        <div class="row">
            <div class="col-md-2">
                <label class="float-right">Описание:</label>
            </div>
            <div class="col-md-10">
                <p>@Model.Description</p>
            </div>
        </div>

        <div class="row">
            <div class="col-md-2">
                <label class="float-right">Вложения:</label>
            </div>
            <div class="col-md-10">
                <p>-</p>
            </div>
        </div>

        <hr />
        <div class="row mb-3">
            <div class="col-md-2">
            </div>
            <div class="col-md-10">
                <h4>Комментарии:</h4>
            </div>
        </div>

        @foreach (var comment in Model.Comments)
        {
            <div class="row mb-3">
                <div class="col-md-2 mb-0">
                    <span class="float-right">Иван Иванов:</span>
                    <span class="float-right">@comment.PublishDate.ToShortDateString() @comment.PublishDate.ToShortTimeString()</span>
                </div>
                <div class="col-md-10">
                    <p>@comment.Comment</p>
                </div>
            </div>
        }

    </div>
</div>
